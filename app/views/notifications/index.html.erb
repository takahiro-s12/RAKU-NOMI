<div class="main-body">
  <h2 class="text-center pt-4 pb-4 border-bottom border-dark page-title">通知</h2>
  <div class="text-center pt-4 pb-3">
    <%= link_to notifications_destroy_all_path, method: :delete do %>
      <i class="fas fa-trash" style="color: black;"></i>
      <h7 style="color: black;">全削除</h7>
    <% end %>
  </div>
  <% if @notifications.exists? %>
    <div class="user-index text-center">
      <%= render @notifications %>
    </div>
  <% else %>
    <p>通知はありません</p>
  <% end %>
</div>