<div class="main-body">
  <h2 class="page-title">マイページ</h2>
  <% if @answers.present? %>
    <P class="color-red text-center pb-2 mb-4">未回答のアンケートが<%= @answers.count %>件あります</p>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-lg-5">
        <%= attachment_image_tag current_user, :image, :fill, 60, 60, fallback: 'no-image.png', id: 'profile-image', class: 'd-block mx-auto' %>
        <table class="table table-borderless">
          <tr>
            <th class="text-center">名前</th>
            <td class="text-center"><%= current_user.family_name %><%= current_user.first_name %></td>
          </tr>
          <tr>
            <th class="text-center">ニックネーム</th>
            <td class="text-center"><%= current_user.nickname %></td>
          </tr>
          <tr>
            <th class="text-center">Email</th>
            <td class="text-center"><%= current_user.email %></td>
          </tr>
          <tr>
            <th class="text-center">好きな食べ物</th>
            <td class="text-center"><%= current_user.favorite_food %></td>
          </tr>
          <tr>
            <th class="text-center">好きな飲み物</th>
            <td class="text-center"><%= current_user.favorite_drink %></td>
          </tr>
          <tr>
            <th class="text-center">嫌いな食べ物</th>
            <td class="text-center"><%= current_user.hated_food %></td>
          </tr>
          <tr>
            <th class="text-center">ID</th>
            <td class="text-center"><%= current_user.public_uid %></td>
          </tr>
        </table>
        <div class="text-center">
          <%= link_to "編集する", edit_user_path, class: 'btn btn-content mb-sm-4' %>
        </div>
      </div>
      <div class="col-lg-7">
          <p class="text-center">今後の飲み会予定</p>
          <div style="width: 100%; height: 394.75px;", class="bg-white rounded">
            <table class="table">
              <thead class="thead-light">
                <tr>
                  <th class="text-center">日程</td>
                  <th class="text-center">グループ名</td>
                  <th class="text-center">飲み会名</td>
                  <th class="text-center">開始時間</td>
                </tr>
              </thead>
              <% @events.each do |event| %>
                <tboby>
                  <tr>
                    <td class="text-center"><%= event.date %></td>
                    <td class="text-center"><%= event.group.name %></td>
                    <td class="text-center"><%= link_to event.name, group_event_path(event.group_id, event) %></td>
                    <% if event.start_time.present? %>
                      <td class="text-center"><%= event.start_time.strftime('%H:%M') %></td>
                    <% else %>
                      <td></td>
                    <% end %>
                  </tr>
                </tboby>
              <% end %>
            </table>
          </div>
          <div class="text-center">
            <%= link_to "グループを作る", new_group_path, class: 'btn btn-content mt-3  mb-sm-4' %>
          </div>
      </div>
    </div>
  </div>
</div>
<div class="container mt-5 pb-5">
  <div class="row">
    <table class="table table-borderless col-sm-3 border border-dark">
      <thead class="border-bottom border-dark">
        <tr>
          <th class="text-center group-color">参加グループ一覧</th>
        </tr>
      </thead>
      <% @groups.each do |group| %>
        <tbody>
          <tr>
            <td class="text-center pt-3"><%= link_to group.name, group_path(group) %></td>
          </tr>
        </tboby>
      <% end %>
    </table>
    <div class="col-sm-1"></div>
    <div class="col-sm-8">
      <p class="text-center">メンバーリスト</p>
      <table class="table table-borderless">
        <tr>
          <thead class="border-bottom border-dark thead-light border border-dark">
            <th></th>
            <th class="text-center">ニックネーム</th>
            <th class="text-center">好きな食べ物</th>
            <th class="text-center">好きな飲み物</th>
            <th class="text-center">嫌いな食べ物</th>
            <th></th>
          </thead>
          <% current_user.following_user.each do |user| %>
            <tbody class="border border-dark">
              <td><%= attachment_image_tag user, :image, :fill, 60, 60, fallback: 'no-image.png', id: 'member-image' %></td>
              <td class="align-middle text-center"><%= user.nickname %></td>
              <td class="align-middle text-center"><%= user.favorite_food %></td>
              <td class="align-middle text-center"><%= user.favorite_drink %></td>
              <td class="align-middle text-center"><%= user.hated_food %></td>
              <td class="align-middle text-center"><%= link_to 'フォローを外す', unfollow_path(user.id), method: :post %></td>
            </tbody>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>