<div class="main-body">
  <h2>マイページ</h2>
  <div class="container">
    <div class="row">
      <div class="col-lg-5">
        <%= attachment_image_tag current_user, :image, :fill, 60, 60, fallback: 'no-image.png', id: 'profile-image' %>
        <table class="table table-borderless">
          <tr>
            <th>名前</th>
            <td><%= current_user.family_name %><%= current_user.first_name %></td>
          </tr>
          <tr>
            <th>ニックネーム</th>
            <td><%= current_user.nickname %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= current_user.email %></td>
          </tr>
          <tr>
            <th>好きな食べ物</th>
            <td><%= current_user.favorite_food %></td>
          </tr>
          <tr>
            <th>好きな飲み物</th>
            <td><%= current_user.favorite_drink %></td>
          </tr>
          <tr>
            <th>嫌いな食べ物</th>
            <td><%= current_user.hated_food %></td>
          </tr>
          <tr>
            <th>ID</th>
            <td><%= current_user.public_uid %></td>
          </tr>
        </table>
        <%= link_to "編集する", edit_user_path, class: 'btn btn-light' %>
      </div>
      <div class="col-lg-7">
        <div>
          <p>今後の飲み会予定</p>
          <table class="table">
          </table>
        </div>
      </div>
    </div>
  </div>
</div>