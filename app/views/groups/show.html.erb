<div class="main-body">
  <h2><%= @group.name %></h2>
  <div>
  <!---飲み会追加、アンケートのリンク実装予定-->
    <%= link_to "編集する", edit_group_path(@group), class: 'btn btn-light' %>
    <%= link_to "飲み会を開く", new_group_event_path(@group), class: 'btn btn-light' %>
    <%= link_to "アンケート作成", new_group_question_path(@group), class: 'btn btn-light' %>
    <%= link_to "アンケート一覧", group_questions_path(@group) %>
  </div>
  <div>
    <p>今後の飲み会予定</p>
    <table>
      <thead>
        <tr>
          <td>日程</td>
          <td>飲み会名</td>
          <td>開始時間</td>
          <td>終了時間</td>
        </tr>
      </thead>
      <% @events.each do |event| %>
        <tbody>
          <td><%= event.date %></td>
          <td><%= link_to event.name, group_event_path(@group, event.id) %></td>
          <td><%= event.start_time %></td>
          <td><%= event.finish_time %></td>
        </tbody>
      <% end %>
    </table>
  </div>
  <div>
    <p>メンバー</p>
    <table>
      <thead>
        <td></td>
        <td>ニックネーム</td>
        <td>好きな食べ物</td>
        <td>好きな飲み物</td>
        <td>嫌いな食べ物</td>
      </thead>
      <% @group.users.each do |user| %>
      <tbody>
        <td><%= attachment_image_tag user, :image, :fill, 60, 60, fallback: 'no-image.png', id: 'member-image' %></td>
        <td><%= user.nickname %></td>
        <td><%= user.favorite_food %></td>
        <td><%= user.favorite_drink %></td>
        <td><%= user.hated_food %></td>
        <td><%= link_to "退会する", group_group_user_path(@group, group_user: { group_id: @group.id, user_id: user.id } ), method: :delete %></td>
      </tbody>
      <% end %>
    </table>
  </div>
</div>