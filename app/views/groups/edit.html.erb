<div class="main-body">
  <h2>グループ編集</h2>
  <%= form_with model: @group, method: :patch, local: true do |f| %>
    <div>
      <%= f.label "グループ名" %>
      <%= f.text_field :name %>
      <!--%= f.submit "更新" %-->
    </div>
  <!--% end %-->
  <!--%= form_with model: @group_user, url: "/groups/#{@group.id}/group_users", method: :post, local: :true do |f| %-->
    <div>
      <p>追加メンバー</p>
      <% @users.each do |user| %>
        <table class="table">
          <tr>
            <td><%= attachment_image_tag user, :image, :fill, 60, 60, fallback: 'no-image.png', id: 'member-image' %></td>
            <td><%= user.nickname %></td>
            <td><%= f.check_box :user_ids, { multiple: true, check: @group.users.find_by(id: user.id).present?,include_hidden: false}, user[:id] %></td>
          </tr>
        </table>
      <% end %>
      <%= f.submit "追加" %>
    </div>
  <% end %>
</div>
