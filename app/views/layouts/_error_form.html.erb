<% if resource.errors.any? %>
  <div class="alart-warning" id="alart">
    <ul style="color: red;">
      <p style="color: red;" class="text-center">エラーが発生しました</p>
      <% resource.errors.full_messages.each do |massage| %>
        <li class="text-center"><%= massage %></li>
      <% end %>
    </ul>
  </div>
<% end %>