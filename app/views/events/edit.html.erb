<div class="main-body">
  <h2 class="page-title">飲み会編集</h2>
  <%= form_with model: @event, url: "/groups/#{@event.group_id}/events/#{@event.id}", method: :patch, local: true do |f| %>
    <div class="container">
      <div class="row mt-5">
        <%= f.label "飲み会名", class: "col-3 text-center offset-2" %>
        <%= f.text_field :name, class: "col-3 offset-1" %>
      </div>
      <div class="row mt-3">
        <%= f.label "日にち", class: "col-3 text-center offset-2" %>
        <%= f.date_field :date, class: "col-3 offset-1" %>
      </div>
      <div class="row mt-3">
        <%= f.label "時間", class: "col-3 text-center offset-2" %>
        <%= f.time_field :start_time, class: "offset-1" %>
        <span>〜</span>
        <%= f.time_field :finish_time %>
      </div>
      <div class="row mt-3">
        <%= f.label "会場", class: "col-3 text-center offset-2" %>
        <%= f.text_field :venue_name, class: "col-3 offset-1" %>
      </div>
      <div class="row mt-3">
        <%= f.label "会場住所", class: "col-3 text-center offset-2" %>
        <%= f.text_field :venue_address, class: "col-3 offset-1" %>
      </div>
      <div class="row mt-3">
        <%= f.label "サイトURL", class: "col-3 text-center offset-2" %>
        <%= f.text_field :site_url, class: "col-3 offset-1" %>
      </div>
      <div class="row mt-3">
        <%= f.label "費用", class: "col-3 text-center offset-2" %>
        <%= f.number_field :cost, class: "col-3 offset-1" %>
      </div>
      <div class="row mt-3">
        <%= f.label "備考", class: "col-3 text-center offset-2" %>
        <%= f.text_area :comment, class: "col-3 offset-1" %>
      </div>
      <div class="text-center mt-5 mr-5">
        <%= f.submit "更新", class: "btn btn-content" %>
      </div>
    </div>
  <% end %>
</div>
