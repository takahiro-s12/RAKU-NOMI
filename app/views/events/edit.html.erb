<div class="main-body-full">
  <div class="page-title">
    <%= link_to group_event_path(@event.group, @event), class: 'page-back btn btn-content' do %>
      <i class="far fa-hand-point-left"></i>
    <% end %>
    <h2 class="mb-0">飲み会編集</h2>
  </div>

  <!---エラー文-->
  <div class="alart">
    <%= render "layouts/error_form", resource: @event %>
  </div>

  <%= form_with model: @event, url: "/groups/#{@event.group_id}/events/#{@event.id}", method: :patch, local: true do |f| %>
    <div class="container">
      <div class="row mt-5 block-table">
        <%= f.label :name, class: "col-lg-3 text-center offset-lg-2" %>
        <%= f.text_field :name, class: "col-lg-3 offset-lg-1" %>
      </div>
      <div class="row mt-3 block-table">
        <%= f.label :date, class: "col-lg-3 text-center offset-lg-2" %>
        <%= f.date_field :date, class: "col-lg-3 offset-lg-1" %>
      </div>
      <div class="row mt-3 block-table">
        <%= f.label :time, class: "col-lg-3 text-center offset-lg-2" %>
        <%= f.time_field :start_time, class: "offset-lg-1" %>
        <span class="block-table">〜</span>
        <%= f.time_field :finish_time %>
      </div>
      <div class="row mt-3 block-table">
        <%= f.label :venue_name, class: "col-lg-3 text-center offset-lg-2" %>
        <%= f.text_field :venue_name, class: "col-lg-3 offset-lg-1" %>
      </div>
      <div class="row mt-3 block-table">
        <%= f.label :venue_address, class: "col-lg-3 text-center offset-lg-2" %>
        <%= f.text_field :venue_address, class: "col-lg-3 offset-lg-1" %>
      </div>
      <div class="row mt-3 block-table">
        <%= f.label :site_url, class: "col-lg-3 text-center offset-lg-2" %>
        <%= f.text_field :site_url, class: "col-lg-3 offset-lg-1" %>
      </div>
      <div class="row mt-3 block-table">
        <%= f.label :cost, class: "col-lg-3 text-center offset-lg-2" %>
        <%= f.number_field :cost, class: "col-lg-3 offset-lg-1" %>
      </div>
      <div class="row mt-3 block-table">
        <%= f.label :comment, class: "col-lg-3 text-center offset-lg-2" %>
        <%= f.text_area :comment, class: "col-lg-3 offset-lg-1" %>
      </div>
      <div class="text-center mt-5 mr-5 pb-5">
        <%= f.submit class: "btn btn-content" %>
        <%= link_to "メール", group_event_mail_path(@event.group, @event), class: 'btn btn-content'%>
      </div>
    </div>
  <% end %>
</div>
