<div class="page-title">
    <%= link_to group_event_path(event.group, event), class: 'page-back btn btn-content' do %>
      <i class="far fa-hand-point-left"></i>
    <% end %>
    <h2 class="mb-0">メンバー追加</h2>
  </div>
<% group.users.each do |user| %>
  <% if event.users.find_by(id: user.id).blank? %>
    <div class="mt-5 mx-auto" style="width: 60%;">
      <table class="table table-borderless">
        <tr>
          <td class="text-right"><%= attachment_image_tag user, :image, :fill, 60, 60, fallback: 'no-image.png', id: 'member-image' %></td>
          <td class="text-center align-middle" width="50%"><%= user.nickname %></td>
          <td width="30%"><%= link_to "追加",group_event_event_users_path(group, event, event_user: { event_id: event.id , user_id: user.id }), method: :post, remote: true , class: 'btn btn-content'%></td>
      </table>
    </div>
  <% end %>
<% end %>